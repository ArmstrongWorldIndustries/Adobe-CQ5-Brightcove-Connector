<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Panel"
    title="Basic">
    <items jcr:primaryType="cq:WidgetCollection">
        <basic
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}false"
            collapsible="{Boolean}false"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./jcr:title"
                    xtype="textfield"/>
                <description
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Description"
                    fieldSubLabel="(For authors)"
                    name="./jcr:description"
                    xtype="textarea"/>
                <hideinnav
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Hide in Navigation"
                    inputValue="{Boolean}true"
                    name="./hideInNav"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </basic>
        <player_information
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}false"
            collapsible="{Boolean}true"
            title="Player Configuration"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <account
                    jcr:primaryType="cq:Widget"
                    path="/apps/brightcove/components/shared/dialog/selection_account.infinity.json"
                    xtype="cqinclude"/>
                <playerID
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    brcAccountFieldName="./account"
                    fieldDescription=""
                    fieldLabel="Player ID:"
                    fieldSubLabel="(HTML5)"
                    hiddenName="./playerID"
                    storePath="/bin/brightcove/api?a=1"
                    xtype="brc_combobox"/>
            </items>
        </player_information>
        <legacy-player
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            title="Legacy Settings (Non-HTML5)"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <playerKey
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}true"
                    fieldLabel="Player Key:"
                    name="./playerKey"
                    xtype="textfield"/>
            </items>
        </legacy-player>
    </items>
</jcr:root>
