<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Panel"
    title="Basic">
    <items jcr:primaryType="cq:WidgetCollection">
        <basic
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}false"
            collapsible="{Boolean}false"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./jcr:title"
                    xtype="textfield"/>
                <hideinnav
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Hide in Navigation"
                    inputValue="{Boolean}true"
                    name="./hideInNav"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </basic>
        <more_titles
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            title="More Titles and Description"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <description
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Description"
                    name="./jcr:description"
                    xtype="textarea"/>
            </items>
        </more_titles>
        <player_information
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            title="Player Configuration"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <account
                    jcr:primaryType="cq:Widget"
                    path="/apps/brightcove/components/shared/dialog/accountSelection.infinity.json"
                    xtype="cqinclude"/>
                <playerID
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    brcAccountFieldName="./account"
                    fieldDescription=""
                    fieldLabel="Player ID:"
                    fieldSubLabel="(HTML5)"
                    hiddenName="./playerID"
                    storePath="/bin/brightcove/api?a=1"
                    xtype="brc_combobox"/>
                <playerKey
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}true"
                    fieldDescription="Legacy configuration"
                    fieldLabel="Player Key:"
                    fieldSubLabel=""
                    name="./playerKey"
                    xtype="textfield"/>
            </items>
        </player_information>
        <player_style
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            title="Player Styles"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <align
                    jcr:primaryType="cq:Widget"
                    path="/apps/brightcove/components/shared/dialog/alignSelection.infinity.json"
                    xtype="cqinclude"/>
                <size
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Size"
                    heightParameter="./height"
                    widthParameter="./width"
                    xtype="sizefield"/>
            </items>
        </player_style>
    </items>
</jcr:root>
